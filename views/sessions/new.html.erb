<div class="login-block">
  <h3>Login</h3>
  <p class='register-blurb'>
    Log in to your existing account here.
  </p>
  <% form_tag session_path do -%>
  <p class="login-session email-login"><label for="login">Login:</label>
  <%= text_field_tag 'login' %></p>
  <p></p>
  <p class="login-session"><label for="password">Password:</label>
  <%= password_field_tag 'password' %></p>
  
  <p class='login-session'><%= submit_tag 'Log In' %></p>
  <p class='login-session'>
    <label for="remember_me">Remember me:</label>
    <%= check_box_tag 'remember_me' %>
  </p>
  <% end -%>
  <br class='clear' />
  <h4 class='forgot'>Forgot Your Password?</h4>
  <p class='register-blurb'>
    No problem. To receive your password via email, please enter the email address that you registered with below.
  </p>
  <% form_tag :controller => 'sessions', :action => 'send_activation_code' do -%>
    <p class="login-session">
      <label for="email">Email Address:</label>
      <%= text_field_tag :email -%>
    </p>
    <p class='remember-submit'><%= submit_tag "Submit" -%></p>
  <% end -%>
</div>
<div class="signup-block">
  <div class='signup-container'>
    <h3>Register here to create an account</h3>
    <p class='register-blurb'>
      <strong>Not Registered Yet?</strong> <span>Sign up below!</span>
      <br class='clear' />
    </p>
    <%= error_messages_for :user %>
    <% form_for :user, :url => users_path do |f| -%>
      <p class="signup-session">
        <label for="login">
          Login:
        </label>
        <%= f.text_field :login %>
      </p>
      <p></p>
      <p class="signup-session">
        <label for="email" class='ie-doesnt-float-right'>
          Email Address:
        </label>
        <%= f.text_field :email %>
      </p>
      <p></p>
      <p class="signup-session">
        <label for="email" class='ie-doesnt-float-right'>
          Confirm Email:
        </label>
        <%= f.text_field :email_confirmation %>
      </p>
      <p></p>
      <p class="signup-session">
        <label for="password">
          Choose a Password:
        </label>
        <%= f.password_field :password %>
      </p>
      <p class="signup-session">
        <label for="password_confirmation">
          Confirm Password:
        </label>
        <%= f.password_field :password_confirmation %>
      </p>
      <br />
      <p class="signup-session submit-create"><%= submit_tag 'Create a user account' %></p>
      <br class='clear' />
    <% end -%>
  </div>
</div>
